<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93aae2"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblEntryUserName"
            android:text="Name :             "/>
        <TextView
            android:layout_width="fill_parent"
            android:textSize="25dp"
            android:text="Name : "
            android:layout_height="30dp"
            android:id="@+id/txtEntryUserName"
            android:textCursorDrawable="@drawable/color_cursor"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblEntryDate"
            android:text="Date :               "/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:maxLength="10"
            android:inputType="date"
            android:id="@+id/txtEntryDate"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/login_user_name"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblEntryItemName"
            android:text="Item Name :   "/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:maxLength="10"
            android:id="@+id/txtEntryItemName"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/login_user_name"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblEntryPrice"
            android:text="Price :              "/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:maxLength="10"
            android:inputType="numberDecimal"
            android:id="@+id/txtEntryPrice"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/login_user_name"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <CheckBox
            android:id="@+id/chkSunny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunny Mehto" />
        <CheckBox
            android:id="@+id/chkAjit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajit Kumar"
            />
        <CheckBox
            android:id="@+id/chkMayur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mayur Tripathi" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnOK"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:text="OK"
            />
    </LinearLayout>
</LinearLayout>
